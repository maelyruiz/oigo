<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="28">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/appbarpreguntas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/Evaluacion"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_weight="3"></android.support.v7.widget.Toolbar>


        <VideoView
            android:id="@+id/vVPreguntas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_weight="11"/>


        <Button
            android:id="@+id/btnOtraVez"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="Reproducir nuevamente"
            android:layout_weight="3"/>



        <TextView
            android:id="@+id/tvPregunta"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Aqui viene la pregunta"
            android:layout_weight="2"/>

        <LinearLayout
            android:id="@+id/llOpcionesRespuesta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/tvPuntos"
            android:orientation="vertical"
            android:layout_weight="5">

        </LinearLayout>

        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:text="Cuanto Vale"
            android:layout_weight="1"/>


    <LinearLayout
        android:id="@+id/corregir"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="3"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSalir"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salir" />

        <Button
            android:id="@+id/btnResponder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aceptar" />
    </LinearLayout>


</LinearLayout>
